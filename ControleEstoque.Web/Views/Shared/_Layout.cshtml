<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Estoque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle de Estoque</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Cadastro
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="GrupoProduto">Grupo de Produtos</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="MarcaProduto">Marca de Produtos</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="LocalProduto">Locais de armazenamentos</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="UnidadeMedida">Unidades de medida</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Produto">Produtos</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Fornecedor">Fornecedores</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Paises">País</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Estados">Estados</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Cidades">Cidades</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="PerfilUsuario">Perfis de Usuários</a>
                                <a class="dropdown-item"  asp-area="" asp-controller="Cadastro"
                                            asp-action="Usuario">Usuários</a>
                            </div>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="#">
                                Operações
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="#">
                                Relatórios
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" href="#">
                                Gráficos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Controle de Estoque - <a asp-area="" asp-controller="Home"
                asp-action="Sobre">Sobre</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
